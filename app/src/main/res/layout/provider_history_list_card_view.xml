<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dish Name :"
                android:layout_below="@+id/image"
                android:padding="8dp"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:id="@+id/dishNameText"
                />

            <TextView
                android:id="@+id/dishNameHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/dishNameText"
                android:layout_toRightOf="@+id/dishNameText"
                android:padding="8dp"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dishNameText"
                android:text="Quantity :"
                android:textSize="18sp"
                android:padding="8dp"
                android:layout_marginTop="8dp"

                android:id="@+id/quantityText"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/quantityText"
                android:layout_below="@+id/dishNameHistory"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:id="@+id/quantityHistory"
                android:text="8"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quantityText"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:text="Date :"
                android:id="@+id/dateText"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateHistory"
                android:layout_below="@+id/quantityText"
                android:layout_toRightOf="@+id/dateText"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:text="02-03-2018"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#354e66"
                android:layout_below="@+id/dateText"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>


</LinearLayout>
