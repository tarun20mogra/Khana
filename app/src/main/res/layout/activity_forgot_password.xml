<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tarun.khana.SignUp"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="00dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        >


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/forgotPasswordText"
            android:text="Forgot Password"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/forgotPasswordText"
            android:text="Please enter your email address and  we will send you your password"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <android.support.design.widget.TextInputLayout
            android:layout_height="60dp"
            android:layout_width="250dp"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="70dp"
            android:id="@+id/textInputLayout2">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2sp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:id="@+id/forgotpPasswordEmail"/>
        </android.support.design.widget.TextInputLayout>


        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/textInputLayout2"
            android:layout_alignStart="@+id/textInputLayout2"
            android:layout_below="@+id/textInputLayout2"
            android:layout_marginTop="104dp"
            android:background="@color/loginButton"
            android:elevation="5dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:id="@+id/submitEmail"/>

        <RadioGroup
            android:layout_marginLeft="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RGroup"
            android:layout_below="@+id/textInputLayout2"
            >
        <RadioButton
            android:id="@+id/radioButtonSeeker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textInputLayout2"
            android:layout_alignStart="@+id/textInputLayout2"
            android:layout_below="@+id/textInputLayout2"
            android:layout_marginTop="14dp"
            android:text="Seeker"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/radioButtonProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioButton"
            android:layout_alignStart="@+id/radioButton"
            android:layout_below="@+id/radioButton"
            android:text="Provider"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        </RadioGroup>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
