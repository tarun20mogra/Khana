<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dish Name :"
                android:padding="8dp"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:id="@+id/dishNameText"
                />

            <TextView
                android:id="@+id/dishNameHistorySeeker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/dishNameText"
                android:layout_toRightOf="@+id/dishNameText"
                android:padding="8dp"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dishNameText"
                android:text="Quantity :"
                android:textSize="18sp"
                android:padding="8dp"
                android:layout_marginTop="8dp"

                android:id="@+id/quantityText"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/quantityText"
                android:layout_below="@+id/dishNameHistorySeeker"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:id="@+id/quantityHistorySeeker"
                android:text="8"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quantityText"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:text="Date :"
                android:id="@+id/dateText"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateHistorySeeker"
                android:layout_below="@+id/quantityText"
                android:layout_toRightOf="@+id/dateText"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:text="02-03-2018"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#354e66"
                android:layout_below="@+id/dateText"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
